<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#0469aa">

    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView7"
        android:layout_weight="0.26" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:id="@+id/imageView4"
        android:src="@mipmap/acondesaazul2"
        android:layout_gravity="bottom|center_horizontal" />

    <ImageView
        android:layout_width="402dp"
        android:layout_height="85dp"
        android:id="@+id/imageView3"
        android:src="@mipmap/acondesaazul"
        android:contentDescription="imagen de logo"
        android:background="#0268aa"
        android:cropToPadding="false"
        android:foregroundGravity="center|center_horizontal|fill"
        android:scaleType="center"
        android:baselineAlignBottom="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="0.13" />

</LinearLayout>